css:

    h1{
        margin-bottom: 25px;
        margin-left: 30px;
        padding-top: 30px;
    }
    button.btn.btn-sm.btn-primary{
        background-color: #193e7a;
        border: #193e7a;
        width: 80px;
        height: 40px;
        margin-top: 30px
    }
    button a{ 
        background-color: #193e7a;
        color: #ffffff;
        
    }
    button.save{
        background-color: #434444;
        color: #ffffff;
        border-color: #434444;
        border-radius: 3px;
        position:relative;
        left: -20px;
        top: 25px;

    }
    a.delete_button{
        background-color: #dd1137;
        color: #ffffff;
        width: 80px;
        height: 40px;
        padding: 10px 17px 10px 17px;
        border-radius: 3px;
        position: relative;
        bottom: -40px;
    }
    
    .wrapper{
        background-color: #999999;
        padding-top: 40px;
    }
    .col-md-12.row{
        width: 100%;
        height: 50px;
        margin-top: 20px;
        background-color: #999999;
    }
    .col-md-2{
        text-align:left;
    }
    .commentbox{
        background-color: #f1f1f1;
        border-radius: 4px;
        padding: 16px;
        margin-bottom:20px;
        margin-top:5px;
    }
    .row.mylists{
        width: 800px;
        margin:auto;
        background-color: #ffffff;
         -moz-box-shadow:    3px 3px 5px 5px #2052a3;
        -webkit-box-shadow: 3px 3px 5px 5px #2052a3;
        box-shadow:         3px 3px 5px 5px #2052a3;

    }
    .list_edit a{
        font-size: 15px;
        position: relative;
        bottom: -10px;
        width: 100px;
        height: 50px;
        padding: 14px 25px 14px 25px;
        border: 1px solid #6b8ec6;
        background-color: #7c96c1;
        border-radius: 3px;
        color: #ffffff
    }
    .list_delete a{
        font-size: 15px;
        position: relative;
        bottom: -10px;
        width: 80px;
        height: 40px;
        padding: 14px 25px 14px 25px;
        background-color: #bf0db3;
        border-radius: 3px;
        color: #ffffff
    }
    .comments{
        margin-top: 30px;
    }
    .one-comment{
        min-height: 40px;
        padding-left: 30px;
        position:relative;
    }
    textarea{
        padding: 5px;
        border-radius: 3px;
    }
    .list_link a{
        
        font-size: 21px;
        color: #ffffff;
        padding-left: 20px; 
    }


.col-md-12
    .row.mylists
        h1 Lists
        .col-md-12.wrapper
            - list.each_with_index do |list,i|
                .row
                    .col-md-3.list_link 
                        a href= "list/#{list.id}" 
                            = list.name
                    .col-md-2.list_edit 
                        a href= "edit/#{list.id}" Edit
                    .col-md-2.list_delete
                        a href= "delete/#{list.id}" Delete

                    .col-md-5.list_comment
                        form method="post" name="comments" action= url("/comment/#{list.id}")
                            .col-md-8.list_comment
                                textarea value="" name="comment" placeholder="Comment"
                            .col-md-4.list_comment.col-md-offset 
                                button class="save" type="submit" save                
                .row
                    .col-md-12.comments
                        - list.comments.each do |comment|
                            .row.one-comment
                                .col-md-8.commentbox
                                    p #{comment.text}

                                .col-md-4
                                    
                                    - if comment.editable? @user
                                        a class="delete_button" href="/comment/delete/#{comment.id}" delete
                            
                hr           
            .col-md-12.col-md-offset-8
                button.btn.btn-sm.btn-primary
                    a href="/new" Add List

